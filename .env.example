# Code Interview Platform - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection URL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/codeinterview

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret key (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time
JWT_EXPIRES_IN=7d

# =============================================================================
# SERVER
# =============================================================================
# Backend server port
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# FRONTEND (Vite)
# =============================================================================
# Backend API URL (optional, defaults to proxy in development)
# VITE_API_URL=http://localhost:3001
